@model RegistrationForm

<div id="result"></div>
@using (Html.BeginUmbracoForm<RegistrationController>("Register", new { id = "contact-form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-6 ">
            @Html.ValidationSummary()
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6 ">
            @Html.RequiredLabelFor(m => m.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            @Html.RequiredLabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            @Html.RequiredLabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            @Html.LabelFor(m => m.SelectedDay, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.SelectedDay, Model.Days, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            <fieldset>
                <legend>@Html.DisplayNameFor(m => m.SelectedMonth)</legend>
                @foreach (var month in Model.Months)
                {
                    <div class="radio">
                        <label>
                            @Html.RadioButtonFor(m => m.SelectedMonth, month.Value, new {id = "month-" + month.Value})@month.Text
                        </label>
                    </div>
                }
            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            <fieldset>
                <legend>@Html.DisplayNameFor(m => m.Years)</legend>
                @for (var i = 0; i < Model.Years.Count(); i++)
                {
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.Years[i].Selected, new {id = "year-" + Model.Years[i].Value})@Model.Years[i].Text
                        </label>
                    </div>
                }
            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.CheckBox)@Html.DisplayNameFor(m => m.CheckBox)
                </label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Register
    </button>
}