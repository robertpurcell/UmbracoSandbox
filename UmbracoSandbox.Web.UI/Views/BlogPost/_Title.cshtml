@model IBlogTitle
<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h1>@Model.Title</h1>
            <p class="text-muted">@Html.DisplayFor(m => m.Date) by @Model.Author.Name</p>
            <div class="lead text-muted">
                @Model.Standfirst
            </div>
        </div>
        @if (Model.ShowImage)
        {
            <div class="circle-image col-sm-2 img-responsive center-block" @Html.DisplayBackgroundImage(Model.ImageUrl)></div>
        }
    </div>
</div>