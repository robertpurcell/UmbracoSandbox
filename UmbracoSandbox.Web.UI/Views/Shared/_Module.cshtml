@model ModuleModel

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        @if (Model.Image != null)
        {
            @Html.DisplayImage(Model.Image, ImageCrops.Teaser)
        }
        <div class="caption">
            <h3>@Model.Title</h3>
            <p>@Model.Summary</p>
            <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a>
            </p>
        </div>
    </div>
</div>