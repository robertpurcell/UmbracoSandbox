@inherits UmbracoViewPage<IMainNavigation>

@if (Model.Items.IsAndAny())
{
    <header>
        <div class="container">
            <nav class="navbar">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand">Home</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav nav-pills navbar-nav">
                        @foreach (var item in Model.Items)
                        {
                            <li @Html.Attribute("class", item.IsCurrentPageOrAncestor ? "active" : null)>
                                <a href="@item.Url" @Html.Attribute("target", item.Target)>@item.Name</a>
                            </li>
                        }
                        @if (Model.IsLoggedIn)
                        {
                            <li>
                                @using (Html.BeginUmbracoForm<LogoutController>("Logout", null, new { @class = "navbar-form" }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn">Logout</button>
                                }
                            </li>
                        }
                        else
                        {
                            if (Model.Login != null)
                            {
                                <li @Html.Attribute("class", Model.Login.IsCurrentPageOrAncestor ? "active" : null)>
                                    <a href="@Model.Login.Url">@Model.Login.Name</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </header>
}