@inherits UmbracoViewPage<INavigation>

@if (Model.Items.IsAndAny())
{
    <nav class="navbar">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">RP</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @foreach (var item in Model.Items)
                {
                    <li>
                        <a href="@item.Url" @Html.Attribute("class", item.IsCurrentPageOrAncestor ? "active" : null)
                           @Html.Attribute("target", item.Target ?? null)>@item.Name</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
}
