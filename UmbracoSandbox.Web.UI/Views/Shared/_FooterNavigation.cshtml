@model INavigation

<footer class="footer">
    <div class="container">
        <nav>
            <ul class="nav nav-pills nav-justified">
                <li>
                    <p class="navbar-text">Copyright &copy; @DateTime.Now.Year Robert Purcell.</p>
                </li>
                @if (Model.Items.IsAndAny())
                {
                    foreach (var item in Model.Items)
                    {
                        <li>
                            <a href="@item.Url" @Html.Attribute("target", item.Target)>@item.Name</a>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</footer>